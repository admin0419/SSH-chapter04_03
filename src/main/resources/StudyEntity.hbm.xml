<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hibernate.lesson.StudyEntity" table="study" schema="text">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="lesson">
            <column name="lesson" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>